func Listener(ip string, port int, id string, listeningEnable <-chan bool) {
	listening := false
	serverConnection
	
	for {
		connection, error := serverConnection.Accept()
		if error != nil {
			go handleConnection(connection)
		}
	}

	enable := true
	for {
		select {
		case enable = <-transmitEnable:
		case <-time.After(interval):
		}
		// Start listening
		if enable && !listening {
			serverConnection, error := net.Listen("tcp", fmt.Sprintf("%s:%d", ip, port))
			if error == nil {
				listening = true
			}
		}
		// Open connection
		if enable && listening {
			go handleConnection(connection)
		}
		
	}
}
}
